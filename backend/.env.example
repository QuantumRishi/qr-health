# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# ===========================================
# SUPABASE CONFIGURATION (Required)
# ===========================================
# Use GitHub Repo Secrets: SUPABASEKEY, SUPABASEURL
SUPABASEURL=your_supabase_project_url
SUPABASEKEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================================
# AI PROVIDER CONFIGURATION (Cloud AI)
# ===========================================
# Use GitHub Organization Secrets for these keys
# Primary AI Provider (options: gemini, groq, sarvam, openai, anthropic, local)
AI_PROVIDER=gemini

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key

# Groq API (Fast inference)
QR_GROQ=your_groq_api_key

# Sarvam AI API (India-focused)
SARVAM_API_KEY=your_sarvam_api_key

# OpenAI API (fallback)
OPENAI_API_KEY=your_openai_api_key

# Anthropic API (fallback)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Local AI (Ollama) Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# ===========================================
# REDIS CONFIGURATION (for caching/queues)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# EMAIL CONFIGURATION (for OTP)
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password

# ===========================================
# PRIVACY & COMPLIANCE
# ===========================================
# Data retention period in days
DATA_RETENTION_DAYS=365
# Enable anonymized analytics
ENABLE_ANALYTICS=false
